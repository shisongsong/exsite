<h1>Login</h1>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :given_input, placeholder: "邮箱/用户名", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= password_input f, :password, placeholder: "密码", class: "form-control" %>
  </div>
  <%= submit "Log in", class: "btn btn-primary" %>
<% end %>
